{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "common.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/room.tsx",
    "utils/clientWebsocket.ts",
    "utils/game.tsx",
    "utils/roomState.tsx",
    "pages/index.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
